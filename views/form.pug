	.field
		label(for='nombre'  class='label') Nombre:
		.control
			input.input(type='text' id='nombre' name='nombre' required placeholder='Nombre' )
	.field
		label(for='apellido' class='label') Apellido:
		.control
			input.input(type='text' id='apellido' name='apellido' required placeholder='apellido' )

	.field
		label(for='nacimiento'  class='label') Fecha de Nacimiento:
		.control
			input.input(type='date' id='nacimiento' name='nacimiento' required placeholder='' )

	label(for='email' class='label') Correo electronico:
	input(type='email' id='email' name='email' required placeholder='Escriba su email'  onkeyup='validateEmail(this.value)')

